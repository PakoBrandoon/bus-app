<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SelectScreenActivity"
    android:orientation="vertical"
    android:background="@drawable/login">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pureBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <TextView

            android:id="@+id/BunkTech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bunk Tech"
            android:textColor="@color/pureWhite"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/noofseats"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Number of seats "
        android:layout_gravity="right"
        android:layout_marginTop="100dp"/>

    <Button

        android:id="@+id/departure"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Depature"
        android:layout_gravity="right"/>


    <Button
        android:id="@+id/destination"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Destination "
        android:layout_gravity="left"/>

    <Button

        android:id="@+id/noofseatsoccupied"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Number of seats Occupied"
        android:layout_gravity="left"/>

</LinearLayout>